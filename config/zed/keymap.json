// Zed keymap
//
// For information on binding keys, see the Zed
// documentation: https://zed.dev/docs/key-bindings
//
// To see the default key bindings run `zed: open default keymap`
// from the command palette.
[
  {
    "context": "Workspace",
    "bindings": {
      // "shift shift": "file_finder::Toggle"
    }
  },
  {
    "context": "Editor",
    "bindings": {
      "ctrl-\\": "terminal_panel::ToggleFocus"
    }
  },
  {
    "context": "Terminal",
    "bindings": {
      "ctrl-\\": "workspace::ToggleBottomDock"
    }
  },
  {
    "context": "Terminal && !Dock",
    "bindings": {
      // This makes the lazygit pane de-maximize on close
      // "q": "workspace::ToggleZoom"
    }
  },
  {
    "context": "Editor && (vim_mode == normal || vim_mode == visual) && !VimWaiting && !menu",
    "bindings": {
      "space": null,
      "space x": "pane::CloseActiveItem",
      "ctrl-w": "pane::CloseActiveItem",
      "space f": "file_finder::Toggle",
      "space w": "workspace::NewSearch",
      "space h": "pane::ActivatePreviousItem",
      "space l": "pane::ActivateNextItem",
      "alt-shift-left": "pane::ActivatePreviousItem",
      "alt-shift-right": "pane::ActivateNextItem",
      "ctrl-b": "workspace::ToggleLeftDock",
      "space g":  ["action::Sequence", [["task::Spawn", { "task_name": "lazygit", "reveal_target": "center" }], "workspace::ToggleZoom"]]
    }
  },
  {
    "context": "vim_mode == visual",
    "bindings": {
      "shift-x": "vim::Exchange",
      "ctrl-s": ["vim::PushAddSurrounds", {}]
    }
  },
  {
    "context": "AssistantPanel",
    "bindings": {
      "ctrl-d": "pane::CloseActiveItem"
    }
  },
  {
    "context": "vim_operator == a || vim_operator == i || vim_operator == ds || vim_operator == cs",
    "bindings": {
      "q": "vim::MiniQuotes",
      "b": "vim::MiniBrackets"
    }
  },
  {
    "context": "vim_mode == normal || vim_mode == visual",
    "bindings": {
      "s": "vim::PushSneak",
      "shift-s": "vim::PushSneakBackward"
    }
  }
]
