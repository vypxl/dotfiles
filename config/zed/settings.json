{
  "features": {
    "edit_prediction_provider": "zed"
  },
  "agent": {
    "always_allow_tool_actions": true,
    "default_profile": "write",
    "default_model": {
      "provider": "anthropic",
      "model": "claude-sonnet-4-thinking-latest"
    },
    "inline_assistant_model": {
      "provider": "anthropic",
      "model": "claude-sonnet-4-latest"
    }
  },
  "telemetry": {
    "diagnostics": false,
    "metrics": false
  },
  "auto_install_extensions": {
    "basher": true,
    "catppuccin": true,
    "docker-compose": true,
    "dockerfile": true,
    "emmet": true,
    "fish": true,
    "git-firefly": true,
    "haskell": true,
    "html": true,
    "just": true,
    "log": true,
    "lua": true,
    "make": true,
    "nix": true,
    "svelte": true,
    "toml": true
  },
  "autosave": { "after_delay": { "milliseconds": 1500 } },
  "vim_mode": true,
  "ui_font_size": 16,
  "buffer_font_size": 16,
  "tab_size": 2,
  "format_on_save": "on",
  "theme": {
    "mode": "system",
    "light": "Catppuccin Macchiato",
    "dark": "Catppuccin Macchiato"
  },
  "terminal": {
    "line_height": "standard"
  },
  "lsp": {
    "nil": {
      "settings": {
        "formatting": {
          "command": ["nixfmt"]
        },
        "nix": {
          "flake": {
            "autoArchive": true
          }
        }
      }
    },
    "rust-analyzer": {
      "initialization_options": {
        "check": {
          "command": "clippy"
        }
      }
    }
  }
}
