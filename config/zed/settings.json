{
  "context_servers": {
    "postgres-context-server": {
      "enabled": true,
      "settings": {
        "database_url": "postgresql://postgres:postgres@localhost:54322/postgres",
      },
    },
    "context7-mcp": {
      "command": "context7-mcp",
      "args": [],
    },
    "chrome-devtools-mcp": {
      "command": "npx",
      "args": [
        "chrome-devtools-mcp@latest",
        "--executablePath=/etc/profiles/per-user/thomas/bin/brave",
        "--headless",
      ],
    },
    "linear-mcp": {
      "command": "npx",
      "args": ["-y", "mcp-remote", "https://mcp.linear.app/mcp"],
    },
  },
  "features": {
    "edit_prediction_provider": "zed",
  },
  "agent": {
    "favorite_models": [
      {
        "provider": "anthropic",
        "model": "claude-opus-4-5-thinking-latest",
      },
      {
        "provider": "google",
        "model": "gemini-3-pro-preview",
      },
      {
        "provider": "google",
        "model": "gemini-3-flash-preview",
      },
      {
        "provider": "openai",
        "model": "gpt-5.2",
      },
    ],
    "always_allow_tool_actions": true,
    "default_profile": "write",
    "default_model": {
      "provider": "anthropic",
      "model": "claude-opus-4-5-thinking-latest",
    },
    "inline_assistant_model": {
      "provider": "anthropic",
      "model": "claude-sonnet-4-5-latest",
    },
  },
  "telemetry": {
    "diagnostics": false,
    "metrics": false,
  },
  "auto_install_extensions": {
    "basher": true,
    "biome": true,
    "catppuccin": true,
    "docker-compose": true,
    "dockerfile": true,
    "emmet": true,
    "fish": true,
    "git-firefly": true,
    "haskell": true,
    "html": true,
    "just": true,
    "log": true,
    "lua": true,
    "make": true,
    "nix": true,
    "svelte": true,
    "toml": true,
  },
  "autosave": { "after_delay": { "milliseconds": 1500 } },
  "vim_mode": true,
  "ui_font_size": 16,
  "buffer_font_size": 16,
  "tab_size": 2,
  "format_on_save": "on",
  "theme": {
    "mode": "system",
    "light": "Catppuccin Macchiato",
    "dark": "Catppuccin Macchiato",
  },
  "terminal": {
    "line_height": "standard",
  },
  "lsp": {
    "nil": {
      "settings": {
        "formatting": {
          "command": ["nixfmt"],
        },
        "nix": {
          "flake": {
            "autoArchive": true,
          },
        },
      },
    },
    "rust-analyzer": {
      "initialization_options": {
        "check": {
          "command": "clippy",
          "workspace": false,
          "extraArgs": ["--no-deps"],
        },
      },
    },
  },
}
